<Window x:Class="PL.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Choose Option:" HorizontalAlignment="Left" Height="217" Margin="115,105,0,0" VerticalAlignment="Top" Width="591" FontSize="16" FontStyle="Italic" FontWeight="SemiBold">
            <StackPanel Margin="21,20,29,24">
                <RadioButton x:Name ="rbStations" Content="Station" Height="53" IsChecked="True" Margin="0,0,-0.4,0"/>
                <RadioButton x:Name ="rbBuses" Content="Buses" Height="51" Margin="0,0,-11.4,0"/>
                <RadioButton x:Name ="rbLines" Content="Lines" Height="35"/>
            </StackPanel>
        </GroupBox>
        <Button Name="buttonOpen"  Content="Open" HorizontalAlignment="Left" Margin="539,327,0,0" VerticalAlignment="Top" Width="205" Height="62" Click="buttonOpen_Click"/>
        <Label Name="labelA" Content="Label wellcome" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top" Height="65" Width="591"/>
    </Grid>
</Window>

<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="630.42" Width="744.14">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="313*"/>
            <RowDefinition Height="104*"/>
        </Grid.RowDefinitions>
        <Button x:Name="AdminButton" Content="GO" HorizontalAlignment="Left" Margin="445,32.8,0,0" VerticalAlignment="Top" Width="90" Click="AdminButton_Click" Height="25" Grid.Row="1"/>
        <MediaElement x:Name="media" HorizontalAlignment="Left" Height="431" Margin="0,10,-0.4,0" VerticalAlignment="Top" Width="738" Source="מעודכן.mp4" LoadedBehavior="Play"/>
        <Button x:Name="newButton" Content="NEW" HorizontalAlignment="Left" Margin="445,79.8,0,0" Grid.Row="1" VerticalAlignment="Top" Width="90" Height="24"/>
        <Grid x:Name="gridUser" HorizontalAlignment="Left" Margin="72,33.2,0,0" Grid.Row="1" VerticalAlignment="Top" Height="71" Width="321">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="145.6"/>
                <ColumnDefinition Width="Auto" MinWidth="124"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Password:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,4.6,0,6.2" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="62"/>
            <TextBox x:Name="passwordTextBox1" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3.6,5.6,0,8.2" Grid.Row="1" Text="{Binding Password, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="User Name:" Grid.Column="0" HorizontalAlignment="Left" Margin="1,2,0,6.4" Grid.Row="0" VerticalAlignment="Center" Height="26" Width="72"/>
            <TextBox x:Name="userNameTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3.6,4,0,7.4" Grid.Row="0" Text="{Binding UserName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        </Grid>
    </Grid>
</Window>

<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.LineWindow"
        mc:Ignorable="d"
        Title="LineWindow" Height="435.6" Width="772.4">

    <!--<Grid>

        <DataGrid x:Name="lineDataGrid" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="82,42,80.6,64.4" ItemsSource="{Binding}" EnableRowVirtualization="True" AutoGenerateColumns="False" SelectionChanged="lineDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="lineNumColumn" Width="*" Header="Line Num" Binding="{Binding LineNum}"/>
                <DataGridTextColumn x:Name="areaColumn" Width="*" Header="Area" Binding="{Binding Area}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="AddLineButton" Content="Add" HorizontalAlignment="Left" Margin="146,252,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="421,252,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.461,2.047"/>

    </Grid>-->
    <Grid Margin="0,7,0.4,-7.4" >
        <Grid.RowDefinitions>
            <RowDefinition Height="208*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>

        <Label Content="Select Student:" Grid.Row="0" HorizontalAlignment="Left" Margin="23,15,0,0" VerticalAlignment="Top" Height="25" Width="90"/>
        <ComboBox x:Name="cbLine" HorizontalAlignment="Left" Text="" VerticalAlignment="Top"
                  Grid.Row="0" Height="25" Margin="121,15,0,0" Width="123"
                  ItemsSource="{Binding}" 
                  HorizontalContentAlignment="Left" VerticalContentAlignment="Top" SelectionChanged="cbLine_SelectionChanged"/>
        <Label Content="List of Courses for selected Student:" HorizontalAlignment="Left" Margin="162,62,0,0" VerticalAlignment="Top" Height="28" Width="217"/>
        <Grid x:Name="gridLine" HorizontalAlignment="Left" Margin="288,15,0,0" VerticalAlignment="Top" Height="30" Width="410">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="50"/>
                <ColumnDefinition Width="Auto" MinWidth="140"/>
                <ColumnDefinition Width="Auto" MinWidth="84"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Content="Area:" Grid.Column="0" HorizontalAlignment="Left" Margin="5,2,0,5" Grid.Row="0" VerticalAlignment="Center" Height="26" Width="37" Grid.ColumnSpan="2"/>
            <TextBox x:Name="areaTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="6.4,2,0,5" Grid.Row="0" Text="{Binding Area, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="Line Num:" Grid.Column="2" HorizontalAlignment="Left" Margin="8.4,1,0,6" VerticalAlignment="Center" Height="26" Width="64"/>
            <TextBox x:Name="lineNumTextBox" Grid.Column="3" Height="22" Margin="5.4,0,10.8,3" Text="{Binding LineNum, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center"/>
        </Grid>
        <DataGrid x:Name="lineStationDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="26,96,190,23.6" RowDetailsVisibilityMode="VisibleWhenSelected" IsReadOnly="True">
            <DataGrid.Columns>

                <DataGridTextColumn x:Name="codeColumn" Binding="{Binding Code}" Header="Code" Width="70"/>
                <DataGridTextColumn x:Name="nameColumn" Binding="{Binding Name}" Header="Name" Width="205"/>
                <DataGridTextColumn x:Name="includeColumn" Binding="{Binding Include}" Header="Include" Width="175"/>

                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="DeleteStationButton" Content="Delete" Click="DeleteStationButton_Click" ToolTip="Update grade for selected course, for selected student"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox  Name="StationsCB" ItemsSource="{Binding}"  HorizontalAlignment="Left" Margin="609,140,0,0" VerticalAlignment="Top" Width="120" Height="22" />
        <Label Content="List Of Stations" HorizontalAlignment="Left" Margin="616,111,0,0" VerticalAlignment="Top" Height="25" Width="100"/>
        <Button x:Name="AddStationButton" Content="Add station" HorizontalAlignment="Left" Margin="632,272,0,0" VerticalAlignment="Top" Width="75" Height="19" Click="AddStationButton_Click" />

        <Button Content="AddLine" HorizontalAlignment="Left" Margin="162,15.4,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="19" Click="AddButton_Click"/>
        <Button Content="DeleteLine" HorizontalAlignment="Left" Margin="375,15.4,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.304,1.271" Click="DeleteButton_Click" Height="19"/>
        <TextBox Name="indexTextBox" HorizontalAlignment="Left" Height="23" Margin="620,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="97" KeyDown="indexTextBox_KeyDown"/>
        <Label Content="enter the index" HorizontalAlignment="Left" Margin="619,187,0,0" VerticalAlignment="Top" Height="27" Width="98"/>

    </Grid>

</Window>
